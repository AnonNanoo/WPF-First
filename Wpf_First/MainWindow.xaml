<Window x:Class="Wpf_First.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_First"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="270,100,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button..." VerticalAlignment="Top"/>
        <RadioButton x:Name="GoodbyeButton" Content="RadioButton" HorizontalAlignment="Left" Margin="512,168,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="HelloButton" Content="RadioButton" HorizontalAlignment="Left" Margin="266,171,0,0" VerticalAlignment="Top" IsChecked="True" />
        <Button x:Name="DisplayButton" Content="Display" HorizontalAlignment="Left" Margin="413,269,0,0" VerticalAlignment="Top" Click="DisplayButton_Click"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="597,243,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
